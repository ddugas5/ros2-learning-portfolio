<?xml version="1.0"?>
<robot name="my_robot">

    <!--define colors -->
    <material name="grey">
        <color rgba="0.7 0.7 0.7 1"/>
    </material>

    <material name="green">
        <color rgba="0 0.6 0.0 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <!--base link-->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <material name="green"/>
        </visual>
    </link>

    <!-- lidar -->
    <link name="lidar">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="white"/>
        </visual>
    </link>

    <joint name="base_lidar_joint" type="fixed">
        <parent link="base_link" />
        <child link="lidar" />
        <origin xyz="0 0 0.225" rpy="0 0 0"/>
    </joint>
    
    <!--left wheel-->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="grey"/>
        </visual>
    </link>

    <joint name="left_wheel_link" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel" />
        <origin xyz="-0.15 0 0" rpy="0 0 0"/>
        <axis xyz="1 0 0" />
    </joint>

    <!--right wheel-->
</robot>